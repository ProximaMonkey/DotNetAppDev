<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <system.serviceModel> <!--Установка ABC-->
    <services>
      <service name="MagicEightBallServiceLib.MagicEightBallService"
               behaviorConfiguration="EightBallServiceMEXBehavior">
        <!--Адрес может быть получен из элемента baseAddresses-->
        <endpoint address="http://localhost/MagicEightBallService"
                  binding="basicHttpBinding"
                  contract="MagicEightBallServiceLib.IEightBall"/>
        <!--Включить конечную точку MEX-->
        <endpoint address="mex"
                  binding="mexHttpBinding"
                  contract="IMetadataExchange"/>
        <!--Перечислить все базовые адреса в выделенном разделе-->
        <!--Это необходимо добавить, чтобы MEX знал адрес нашей службы-->
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost/MagicEightBallService"/>
          </baseAddresses>
        </host>
      </service>
    </services>
    <!--Определение поведения для MEX-->
    <behaviors>
      <serviceBehaviors>
        <behavior name="EightBallServiceMEXBehavior">
          <serviceMetadata httpGetEnabled="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>