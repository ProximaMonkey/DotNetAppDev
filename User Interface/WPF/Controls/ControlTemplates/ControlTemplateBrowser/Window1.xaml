<Window x:Class="ControlTemplateBrowser.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ControlTemplateBrowser" Height="544" Width="713" Loaded="OnWindowLoaded">
    <Grid Margin="10" Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <ListBox DisplayMemberPath="Name" Name="TypesListbox" SelectionChanged="OnTypeSelectionChanged" />
        <TextBox Grid.Column="1" Name="TemplateTextbox" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible"
                 FontFamily="Consolas" />

    </Grid>
</Window>