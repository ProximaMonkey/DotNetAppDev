<Window x:Class="i18nViaMarkupExt.MainWindow"        
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:i18NViaMarkupExt="clr-namespace:i18nViaMarkupExt">
    <Grid>
        <StackPanel>
            <ComboBox ItemsSource="{Binding Languages}" IsSynchronizedWithCurrentItem="True" Margin="8" />
            <TextBlock Text="{i18NViaMarkupExt:Translate LocalizedByMarkupExtension}" Margin="8" />
        </StackPanel>
    </Grid>
</Window>